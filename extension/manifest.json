{
  "manifest_version": 2,
  "name": "utah-ward-sex-offender-extension",
  "description": "Adds a 'Sex Offender' section to the lds.org directory",
  "version": "0.0.1",
  "icons": {
    "16": "./icons/icon.png",
    "48": "./icons/icon.png",
    "128": "./icons/icon.png"
  },
  "browser_action": {
    "default_popup": "./menu/menu.html"
  },
  "background": {
    "scripts": [ "./dist/fetch.offenders.js" ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://directory.lds.org/*",
        "*://localhost/*"
      ],
      "run_at": "document_idle",
      "js": [ "./dist/offender.finder.js" ]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "cookies",
    "*://*.icrimewatch.net/",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "web_accessible_resources": ["dist/*", "icons/*", "menu/*"]
}
